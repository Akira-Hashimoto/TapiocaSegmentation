<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="判定結果"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:id="@+id/result_label"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tapioca_img" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/colorAccent"/>

    <ImageView
            android:layout_width="189dp"
            android:layout_height="296dp" app:srcCompat="@drawable/tapix"
            android:id="@+id/tapioca_img" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="タピオカの量："
            android:textSize="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tapioca_quantity_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/result_label"/>

    <TextView
            android:id="@+id/tapioca_quantity"
            android:text="多め"
            android:textSize="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tapioca_quantity_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/result_label"
            android:layout_marginTop="36dp"/>

    <TextView
            android:text="カロリー："
            android:textSize="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/calory_label" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tapioca_quantity_label"
            app:layout_constraintStart_toStartOf="@+id/tapioca_quantity_label"
            app:layout_constraintEnd_toStartOf="@+id/calory"
            app:layout_constraintBottom_toTopOf="@+id/again_button" app:layout_constraintVertical_bias="0.157"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="高め"
            android:textSize="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/calory"
            app:layout_constraintTop_toBottomOf="@+id/tapioca_quantity" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/again_button" android:layout_marginEnd="24dp"
            app:layout_constraintVertical_bias="0.035"
            app:layout_constraintStart_toStartOf="@+id/tapioca_quantity" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="もう一度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:id="@+id/again_button" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="92dp" app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="60dp"
            android:paddingEnd="60dp" app:layout_constraintHorizontal_bias="0.497"/>
</androidx.constraintlayout.widget.ConstraintLayout>