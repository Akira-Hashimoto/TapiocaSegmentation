<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:text="判定結果"
            android:textColor="@color/colorAccent"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tapioca_img" />

    <ImageView
            android:id="@+id/tapioca_img"
            android:layout_width="189dp"
            android:layout_height="296dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/result" />

    <TextView
            android:id="@+id/tapioca_quantity_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="36dp"
            android:text="タピオカの量："
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_label" />

    <TextView
            android:id="@+id/tapioca_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:text="60個"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tapioca_quantity_label"
            app:layout_constraintTop_toBottomOf="@+id/result_label" />

    <TextView
            android:id="@+id/calory_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="カロリー："
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/again_button"
            app:layout_constraintEnd_toStartOf="@+id/calory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tapioca_quantity_label"
            app:layout_constraintTop_toBottomOf="@+id/tapioca_quantity_label"
            app:layout_constraintVertical_bias="0.157" />

    <TextView
            android:id="@+id/calory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="341kcal"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/again_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tapioca_quantity"
            app:layout_constraintTop_toTopOf="@+id/calory_label"
            app:layout_constraintVertical_bias="0.035" />

    <TextView
            android:id="@+id/again_button"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="42dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>